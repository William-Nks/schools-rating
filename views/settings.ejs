
    <%- include("./partials/header.ejs") %>
    <% 
        const {user} = session
    %>
    
    <main style="background: url(&quot;/assets/img/email-pattern.png&quot;);">
        <div id="alert-wrapper"></div>
        <section class="position-relative py-4 py-xl-5">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-8 col-xl-6 text-center text-primary mx-auto">
                        <h2>Settings</h2>
                        <p class="fw-bold w-lg-50">You can configure your account to suit you. You might not be able to change some settings.</p>
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 col-xl-4">
                        <div class="card mb-5">
                            <div class="card-body d-flex flex-column align-items-center">
                                <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                                    </svg></div>
                                <form class="text-center" method="post">
                                    <div class="mb-3">
                                        <input class="form-control" type="text" name="name" placeholder="Name"  value="<%= user.name %>" readonly="">
                                    </div>
                                    <div class="mb-3">
                                        <input class="form-control" type="email" name="email" placeholder="Email" value="<%= user.email%>" readonly="">
                                    </div>
                                    <div class="mb-3">
                                        <input id="password" class="form-control" type="password" name="password" placeholder="Password" required="" minlength="8" maxlength="180">
                                    </div>
                                    <div class="mb-3">
                                        <input id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Cofirm Password" required="" minlength="8" maxlength="180">
                                    </div>
                                    <div class="form-check mb-3"><input class="form-check-input" type="checkbox" id="show-pwd"><label class="form-check-label" for="show-pwd">Show password</label></div>
                                    <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Update</button></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("./partials/footer_dark.ejs") %>
    <script src="/assets/js/ejs_bootstrap_alert.js"></script>
    <script src="/assets/js/auth_controller.min.js"></script>
    <script>
        if('<%-errors%>') yieldAlert(JSON.parse('<%-errors%>'))
    </script>
</body>
</html>